{{> menu}}

<form class="box"  action="/spot/{{difficulty._id}}/updatespot/{{spot._id}}" method="POST">
  <label>Update Spot Details:</label>
  <div class="field is-horizontal">
    <div class="field-body">
      <div class="field">
        <input class="input" type="text" name="name", value="{{spot.name}}">
      </div>
       <div class="field">
        <input class="input" type="number" step="0.0000001"  name="latitude" value="{{spot.latitude}}">
      </div>
      <div class="field">
        <input class="input" type="number" step="0.0000001"  name="longitude" value="{{spot.longitude}}">
      </div>
      <<div class="field">
        <label class="label">Description</label>
        <div class="control">
          <textarea class="textarea is-input has-fixed-size" type="text" maxlength="100" pattern="[A-Za-z\\s]+{1,20}" name="description">{{spot.description}}</textarea>
        </div>
    </div>
  </div>
  <button class="button is-primary">Update Spot</button>
</form>

